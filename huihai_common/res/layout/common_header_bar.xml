<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="wrap_content" android:background="@drawable/header_bg" android:orientation="horizontal"
    android:layout_height="50dp">
    <TextView android:text="惠海" android:id="@+id/logo" android:layout_margin="3dp" style="@style/CodeFont"
        android:layout_width="100dp" android:layout_height="45dp" />
        
    <TextView android:text="查看" android:layout_margin="3dp" style="@style/CodeFont" android:gravity="center"
        android:layout_width="wrap_content" android:layout_height="fill_parent" />
    <ImageButton android:background="@drawable/down" android:id="@+id/downBtn"
        android:layout_height="45dp" android:layout_width="45dp"/>
    <TextView android:text="" android:id="@+id/space" 
        android:layout_width="50dp" android:layout_height="45dp" />
    <Button android:background="@drawable/add_item_btn" android:id="@+id/addBtn" android:layout_toRightOf="@id/downBtn"
        android:text="加一条" android:layout_marginTop="2dp"
        android:layout_width="70dp" android:layout_height="45dp" /> 
</LinearLayout>
