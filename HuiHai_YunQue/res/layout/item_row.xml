<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="2dp" android:paddingRight="2dp" android:paddingBottom="1dp"
    android:weightSum="1">
    
    <TextView android:id="@+id/item_name" android:text="TextView" style="@style/CodeFont"/>
    <ImageView android:id="@+id/imageView1" android:src="@drawable/user" android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
    
    <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/person_name" style="@style/CodeFont"/>
    <ImageView android:id="@+id/imageView2" android:src="@drawable/calendar_empty" android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
    
    <TextView android:id="@+id/happen_time" style="@style/CodeFont" android:text="TextView"/>
    
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:visibility="invisible" android:id="@+id/item_id_hidden" android:text="TextView"></TextView>
</LinearLayout>
