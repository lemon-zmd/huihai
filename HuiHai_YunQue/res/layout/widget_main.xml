<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <ImageView android:id="@+id/widget_btn_backend" android:src="@drawable/widget_backend" android:layout_width="wrap_content" 
        android:layout_height="wrap_content" android:clickable="true"/>
    <ImageView android:id="@+id/widget_btn_add" android:src="@drawable/widget_add" android:layout_width="wrap_content" 
        android:layout_height="wrap_content" android:clickable="true"/>
    <ImageView android:id="@+id/widget_btn_chart" android:src="@drawable/widget_chart" android:layout_width="wrap_content" 
        android:layout_height="wrap_content" android:clickable="true"/>
</LinearLayout>
