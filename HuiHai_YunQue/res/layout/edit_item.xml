<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
    <ScrollView  android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical"
            android:padding="10dp" android:background="@drawable/main_bg_pic"
            android:layout_width="fill_parent" android:layout_height="fill_parent">
            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:padding="2dp">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="类型"
                    android:layout_gravity="center" style="@style/CodeFont" />
                <Spinner android:id="@+id/item_type" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:padding="2dp">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="车牌"
                    android:layout_gravity="center" style="@style/CodeFont" />
                <EditText android:id="@+id/plate_no" android:layout_height="wrap_content"
                    android:layout_width="fill_parent" android:text="jingb2349"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:padding="2dp">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="发货重"
                    android:layout_gravity="center" style="@style/CodeFont" />
                <EditText android:id="@+id/sendWeight"
                    android:layout_height="wrap_content" android:layout_width="80dp"
                    android:text="100" android:inputType="numberDecimal" />
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="实收重"
                    android:layout_gravity="center" style="@style/CodeFont" />
                <EditText android:id="@+id/receiveWeight"
                    android:layout_height="wrap_content" android:layout_width="80dp"
                    android:text="10" android:inputType="numberDecimal" />
            </LinearLayout>


            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:padding="2dp">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="单价"
                    android:layout_gravity="center" style="@style/CodeFont" />
                <EditText android:id="@+id/price" android:layout_height="wrap_content"
                    android:layout_width="fill_parent" android:text="$100"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:padding="2dp">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="实际支付"
                    android:layout_gravity="center" style="@style/CodeFont" />
                <EditText android:id="@+id/payment" android:layout_height="wrap_content"
                    android:layout_width="fill_parent" android:text="$1000"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:padding="2dp">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="经办人"
                    android:layout_gravity="center" style="@style/CodeFont" />
                <EditText android:id="@+id/owner" android:layout_height="wrap_content"
                    android:layout_width="fill_parent" android:text="lemon" />
            </LinearLayout>

            <LinearLayout android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:padding="2dp">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="时间"
                    android:layout_gravity="center" style="@style/CodeFont" />
                <EditText android:id="@+id/create_date" android:layout_height="wrap_content"
                    android:layout_width="fill_parent" android:text="今天" android:inputType="date"/>
                <!--  <DatePicker android:id="@+id/now" android:layout_height="wrap_content"
                    android:layout_width="fill_parent" /> -->
            </LinearLayout>


            <TableLayout android:orientation="horizontal"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:padding="2dp" android:stretchColumns="*"
                android:layout_gravity="bottom">
                <TableRow>
                    <Button android:text="保存" android:layout_width="wrap_content" android:layout_height="fill_parent" 
                        android:id="@+id/save"/>
                    <Button android:text="继续" android:layout_width="wrap_content"
                        android:layout_height="fill_parent" android:id="@+id/continueBtn"/>
                    <Button android:text="返回" android:layout_width="wrap_content"
                        android:layout_height="fill_parent" android:id="@+id/returnBtn"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>    
        
        <!-- <Button android:text="next" android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:layout_gravity="top|right" android:layout_marginTop="10dp"/>
                        
        <Button android:text="prev" android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:layout_gravity="top|right" android:layout_marginTop="10dp"/>
        -->

</FrameLayout>